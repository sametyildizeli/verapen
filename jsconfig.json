// tsconfig.json or jsconfig.json

{
    "compilerOptions": {
      "baseUrl": ".",
      "paths": {
        "@components/*": ["src/components/*"],
        "@components-daglar/*": ["src/components/*"],
        "@assets/*": ["src/assets/*"],
        "@layout/*": ["src/layout/*"],
        "@layout-daglar/*": ["src/layout/*"],
        "@pages/*": ["src/pages/*"],
        "@styles/*": ["src/styles/*"],
        "@utils/*": ["src/utils/*"]
      }
    },
    "include": ["."],
    "exclude": ["node_modules"]
  }
  